<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.edapps.examapp.ProfileActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <TextView
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:text="Welcome : "
            android:id="@+id/tv_welcome"
            android:layout_margin="25dp"
            android:textSize="24sp"/>


        <Button
            android:layout_gravity="center"
            android:text="Start"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_start"
            android:layout_marginTop="35dp"
            android:layout_alignTop="@+id/tv_welcome"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_gravity="center"
            android:text="Info"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Info"
            android:layout_alignBaseline="@+id/btn_start"
            android:layout_alignBottom="@+id/btn_start"
            android:layout_toLeftOf="@+id/btn_logout"
            android:layout_toStartOf="@+id/btn_logout"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="13dp" />

        <Button
            android:text="Logout"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_logout"
            android:layout_gravity="bottom"
            android:layout_alignBaseline="@+id/btn_Info"
            android:layout_alignBottom="@+id/btn_Info"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_chart"
        android:layout_width="350dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/common_full_open_on_phone"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your latest chart"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="128dp" />

</RelativeLayout>
